---
const { title, bg, responsiveWidth, height } = Astro.props;
---

<div
  class={`text-2xl flex justify-center gap-2 items-center ${responsiveWidth} ${height} bg-card rounded-lg `}
>
  <div
    class={`z-20 flex items-center justify-center ${bg} w-8 h-8 rounded-lg bg-opacity-20`}
  >
    <svg
      xmlns="http://www.w3.org/2000/svg"
      viewBox="0 0 120 100"
      width="100"
      height="100"
    >
      <text
        x="11"
        y="70"
        font-family="Inter"
        font-size="60"
        fill="black"
        font-weight="700"
      >
        &lt;
      </text>
      <text
        x="48"
        y="74"
        font-family="Inter"
        font-size="70"
        fill="#3366cc"
        font-weight="600"
      >
        /
      </text>
      <text
        x="70"
        y="70"
        font-family="Inter"
        font-size="60"
        fill="black"
        font-weight="700"
      >
        &gt;
      </text>
    </svg>
  </div>
  <span class="z-30 text-sm font-medium text-black">{title}</span>
</div>
