---
import Layout from "../layouts/Layout.astro";

---
<Layout>
  <title>terminal</title>
  <div class="flex flex-col w-full border-gray-900 border h-80 rounded-md bg-gray-900 text-xs text-white overflow-y-auto ">
    <div class="items-center flex h-6 justify-between px-2 text-white absolute bg-gray-900">
      <div class="flex items-center h-full gap-2 w-16">
        <div class="rounded-full h-[12px] w-[12px] bg-red-400 border-red-900 "></div>
        <div class="rounded-full h-[12px] w-[12px] bg-yellow-500 border-yellow-900"></div> 
        <div class="rounded-full h-[12px] w-[12px] bg-green-500 border-green-900"></div>
      </div>
      <div>idkzsh</div>
     <div class="flex items-center h-full w-16"></div> 
    </div>
      <div id="terminal" class="nerdfont p-1 w-full mt-6">
      <form hx-post="/api/terminal" hx-target="#add" hx-trigger="submit" hx-swap="beforeend show:bottom focus-scroll:true" hx-on::before-request="this.reset()">


        <div id="add">
          <input type="hidden" name="count" value={1}>
        </div>
        <div class="flex">
          <span class="text-teal-400 pr-2">$ ~ </span>
           <input type="text" id="terminalInput" name="terminalInput1" autofocus class="bg-transparent w-[90%] border-none outline-none caret-white" autocomplete="off">
          
        </div>
      </form>
      </div>
  </div>
</Layout>




